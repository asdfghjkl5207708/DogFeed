<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication1.HomeActivity">


    <ImageButton
        android:id="@+id/im_checkData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:onClick="check_Data_btOnClick"
        app:srcCompat="@drawable/black" />

    <ImageButton
        android:id="@+id/im_logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        app:srcCompat="@drawable/white"
        android:layout_alignTop="@+id/im_checkData"
        android:layout_toEndOf="@+id/im_checkData" />

    <ImageButton
        android:id="@+id/im_aboutUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/im_checkData"
        android:layout_marginBottom="70dp"
        app:srcCompat="@drawable/brown" />

    <TextView
        android:id="@+id/tv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/im_checkData"
        android:layout_below="@+id/im_checkData"
        android:layout_marginStart="33dp"
        android:layout_marginTop="15dp"
        android:text="Check Data"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_check"
        android:layout_alignBottom="@+id/tv_check"
        android:layout_alignEnd="@+id/im_logOut"
        android:layout_marginEnd="21dp"
        android:text="Log out"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_aboutUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_check"
        android:layout_marginBottom="33dp"
        android:text="About Us"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
</RelativeLayout>
